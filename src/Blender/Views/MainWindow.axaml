<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Blender.ViewModels"
    xmlns:dv="using:DumpViewer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="Blender.Views.MainWindow"
    x:DataType="vm:MainWindowViewModel"
    Foreground="White"
    Background="Black"
    Icon="/Assets/avalonia-logo.ico"
    Title="Blender">

<Window.KeyBindings>
    <KeyBinding Gesture="Ctrl+O" Command="{Binding OpenFileCommand}"/>
    <KeyBinding Gesture="Alt+F4" Command="{Binding CloseWindowCommand}"/>
    <KeyBinding Gesture="Ctrl+W" Command="{Binding CloseWindowCommand}"/>
    <KeyBinding Gesture="Ctrl+R" Command="{Binding ShowRawViewCommand}"/>
    <KeyBinding Gesture="Ctrl+D" Command="{Binding ShowObjectsViewCommand}"/>
</Window.KeyBindings>

<Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open..." Command="{Binding OpenFileCommand}" InputGesture="Ctrl+O"/>
                <Separator/>
                <MenuItem Header="E_xit" Command="{Binding CloseWindowCommand}" InputGesture="Ctrl+W"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Raw" Command="{Binding ShowRawViewCommand}" InputGesture="Ctrl+R">
                    <MenuItem.Icon>
                        <CheckBox IsChecked="{Binding IsRawView, Mode=OneWay}" 
                                  BorderThickness="0" IsHitTestVisible="False"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Objects" Command="{Binding ShowObjectsViewCommand}" InputGesture="Ctrl+D">
                    <MenuItem.Icon>
                        <CheckBox IsChecked="{Binding IsObjectsView, Mode=OneWay}" 
                                  BorderThickness="0" IsHitTestVisible="False"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
        
        <!-- Error display -->
        <Border DockPanel.Dock="Top" 
                Background="#442222" 
                Padding="8"
                IsVisible="{Binding HasError}">
            <TextBlock Text="{Binding ErrorMessage}" Foreground="#FF6666"/>
        </Border>
        
        <!-- Welcome message when no data is loaded -->
        <StackPanel IsVisible="{Binding !HasData}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="16">
            <TextBlock Text="Blender" 
                       FontSize="32" 
                       FontWeight="Light"
                       HorizontalAlignment="Center"
                       Foreground="#808080"/>
            <TextBlock Text="Open a file or pipe data to visualize" 
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Foreground="#606060"/>
            <TextBlock Text="Ctrl+O to open a file" 
                       FontSize="12"
                       HorizontalAlignment="Center"
                       Foreground="#505050"/>
        </StackPanel>
        
        <!-- Raw text view -->
        <ScrollViewer IsVisible="{Binding IsRawView}"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <ScrollViewer.IsVisible>
                <MultiBinding Converter="{x:Static BoolConverters.And}">
                    <Binding Path="IsRawView"/>
                    <Binding Path="HasData"/>
                </MultiBinding>
            </ScrollViewer.IsVisible>
            <TextBox Text="{Binding InputData, Mode=OneWay}"
                     IsReadOnly="True"
                     AcceptsReturn="True"
                     FontFamily="Consolas, Monaco, 'Courier New', monospace"
                     FontSize="13"
                     Background="#1E1E1E"
                     Foreground="#D4D4D4"
                     BorderThickness="0"
                     Padding="8"/>
        </ScrollViewer>
        
        <!-- Object viewer -->
        <dv:ObjectViewer Value="{Binding Data}">
            <dv:ObjectViewer.IsVisible>
                <MultiBinding Converter="{x:Static BoolConverters.And}">
                    <Binding Path="IsObjectsView"/>
                    <Binding Path="HasData"/>
                </MultiBinding>
            </dv:ObjectViewer.IsVisible>
        </dv:ObjectViewer>
    </DockPanel>

</Window>
